{% unless request.design_mode %}
  {% if request.page_type == 'index' %}
    {{ 'video-loader.css' | asset_url |  stylesheet_tag }}

    <div id="loader">
      <video width="300" height="300" autoplay muted playsinline>
        <source src="{{ 'koronful-loader.webm' |  asset_url }}" type="video/webm">
        Your browser does not support the video tag.
      </video>
    </div>

    <script src="{{ 'video-loader.js' |  asset_url }}" defer></script>
  {% endif %}
{% endunless %}